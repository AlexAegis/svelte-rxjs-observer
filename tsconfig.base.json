{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": true,
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2020",
		"module": "es2022",
		"resolveJsonModule": true,
		"lib": ["es2022", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"svelte-rxjs-observer": ["libs/svelte-rxjs-observer/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
